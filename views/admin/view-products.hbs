<section>
    <div class="container">
        <div class="row mt-3">
            <a href="/admin/add-products" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table mt-5">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Title</th>
                <th scope="col">Category</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <th scope="row">{{inc @index}}</th>
                <td>{{this.name}}</td>
                <td>{{this.category}}</td>
                <td style="width: 30%;">{{this.description}}</td>
                <td><img style="height: 50px; width:50px" src="/images/product-images/{{this._id}}.jpg" alt="..."></td>
                <td>&#x20B9 {{this.price}}</td>
            </tr>
            {{/each}}

        </tbody>
    </table>
  </div>
    
</section>