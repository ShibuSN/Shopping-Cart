<section>
    <div class="container">
        <div class="row mt-3">
            <a href="/admin/add-products" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                    <th scope="col">Price</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td style="width: 20%;">{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td style="width: 30%;">{{this.description}}</td>
                    <td><img style="height: 50px; width:50px" src="/images/product-images/{{this._id}}.jpg" alt="...">
                    </td>
                    <td>&#x20B9 {{this.price}}</td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                            onclick="return confirm('Do you want to delete {{this.name}}?')">Delete</a>
                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>

</section>